{
  "name": "@olasearch/chat",
  "version": "3.0.8",
  "description": "Chat User Interface elements",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "watch": "babel --watch src --out-dir lib",
    "standard": "standard --verbose --fix src/*",
    "release": "NODE_ENV=production webpack --display-optimization-bailout --config webpack.release.js",
    "prettier-standard": "prettier-standard 'src/**/*.js'",
    "prettier": "yarn prettier-standard && git add src lib && git status"
  },
  "author": "",
  "license": "Copyright Ola Search Pte Ltd",
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "pre-commit": [
    "test",
    "prettier"
  ],
  "prettier": {
    "semi": false
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/test",
      "/lib",
      "/node_modules"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|svg|css|scss)$": "<rootDir>/__tests__/filemock.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup.js",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/src/**"
    ],
    "testMatch": [
      "**/*.spec.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.10",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "expect": "^22.4.0",
    "jest": "^22.4.2",
    "jsdom": "^11.6.2",
    "node-sass": "^4.7.2",
    "pre-commit": "^1.2.2",
    "prettier-standard": "^8.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "regenerator-runtime": "^0.11.1",
    "sass-loader": "^6.0.6",
    "standard": "^11.0.0",
    "style-loader": "^0.20.2",
    "webpack": "^4.0.1",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "webpack-dev-middleware": "^2.0.6",
    "webpack-hot-middleware": "^2.21.0"
  },
  "dependencies": {
    "@olasearch/alite": "^1.0.5",
    "@olasearch/core": "^2.5.2",
    "@olasearch/icons": "^1.0.1",
    "@olasearch/react-onclickoutside": "^6.7.1-rc",
    "@olasearch/styled-jsx": "^2.2.6",
    "@olasearch/textarea-elastic": "^1.0.2",
    "classnames": "^2.2.5",
    "dom-scroll-into-view": "^1.2.1",
    "invariant": "^2.2.3",
    "mitt": "^1.1.3",
    "react-frame-component": "^2.0.2",
    "react-list": "^0.8.8",
    "react-transition-group": "^2.2.1",
    "react-virtualized": "^9.18.5",
    "react-windowed-list": "^2.0.0",
    "redux": "^3.7.2",
    "watson-html5-speech-recognition": "^0.6.6"
  }
}
